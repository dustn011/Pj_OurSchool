<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8EAF6">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center_vertical"
        android:background="#3557C8"
        >

        <ImageView
            android:id="@+id/left_arrow"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/left_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="셔틀 버스"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#FFFFFF"/>

        <ImageView
            android:id="@+id/Profile"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/default_profile" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_menu"
        android:layout_below="@id/header"
        android:background="@color/white"
        android:paddingTop="40dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/station_1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="   정문 (서브웨이 앞)   "
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/station_2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/station_1_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="    중문 (우체국 앞)     "
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/station_3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/station_2_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="       보건의료대학       "
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/station_4_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/station_3_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text=" 학생회관 (운동장 뒤) "
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/station_5_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/station_4_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="예술대학 (미래창조관)"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/station_6_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/station_5_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="  기숙사 (버스정류장)  "
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/left_connecting_line"
            android:layout_width="3dp"
            android:layout_height="380dp"
            android:layout_alignTop="@id/station_1_text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="82dp"
            android:layout_marginTop="11dp"
            android:background="#3557c8" />

        <ImageView
            android:id="@+id/dot_left_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/station_1_text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="68dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/dot_blue" />



        <ImageView
            android:id="@+id/dot_left_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/station_2_text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="68dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/dot_blue" />



        <ImageView
            android:id="@+id/dot_left_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/station_3_text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="68dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/dot_blue" />

        <ImageView
            android:id="@+id/dot_left_4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/station_4_text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="68dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/dot_blue" />

        <ImageView
            android:id="@+id/dot_left_5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/station_5_text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="68dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/dot_blue" />

        <ImageView
            android:id="@+id/dot_left_6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/station_6_text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="68dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/dot_blue" />

        <ImageView
            android:id="@+id/bus_down_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bus_down"
            android:layout_alignStart="@id/dot_left_1"
            android:layout_alignTop="@id/dot_left_1"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="-10dp"/>

        <View
            android:id="@+id/right_connecting_line"
            android:layout_width="3dp"
            android:layout_height="380dp"
            android:layout_alignTop="@id/station_1_text"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="82dp"
            android:background="#3557c8" />

        <ImageView
            android:id="@+id/dot_right_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/station_1_text"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="68dp"
            android:src="@drawable/dot_blue" />


        <ImageView
            android:id="@+id/dot_right_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/station_2_text"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="68dp"
            android:src="@drawable/dot_blue" />

        <ImageView
            android:id="@+id/dot_right_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/station_3_text"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="68dp"
            android:src="@drawable/dot_blue" />

        <ImageView
            android:id="@+id/dot_right_4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/station_4_text"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="68dp"
            android:src="@drawable/dot_blue" />



        <ImageView
            android:id="@+id/dot_right_5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/station_5_text"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="68dp"
            android:src="@drawable/dot_blue" />

        <ImageView
            android:id="@+id/dot_right_6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/station_6_text"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="68dp"
            android:src="@drawable/dot_blue" />

        <ImageView
            android:id="@+id/bus_up_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bus_down"
            android:layout_alignEnd="@id/dot_right_6"
            android:layout_alignTop="@id/dot_right_6"
            android:layout_marginEnd="-10dp"
            android:layout_marginTop="-10dp"   />

    </RelativeLayout>

    <View
        android:id="@+id/bottom_menu_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CCCCCC"
        android:layout_above="@id/bottom_menu" />

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/home"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:src="@drawable/home"
                android:background="@drawable/rounded_background"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홈"
                android:textColor="@android:color/black"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/time"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:src="@drawable/time"
                android:background="@drawable/rounded_background"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간표"
                android:textColor="@android:color/black"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/campus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:src="@drawable/map"
                android:background="@drawable/rounded_background"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="캠퍼스맵"
                android:textColor="@android:color/black"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/chat"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:src="@drawable/chat"
                android:background="@drawable/rounded_background"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채팅"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@android:color/transparent"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>